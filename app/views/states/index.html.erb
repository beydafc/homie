<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1536010305525-f7aa0834e2c7?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
  <div class="container, d-flex" >
    <div class="ml-5" >
      <div class="mt-2">
        <div class="container,d-flex, mx-5, px-5" >
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Escoge el estado
            </button>
            <ul class="dropdown-menu">
              <% @states.each do |state|  %>
                <li><%= link_to "#{state.name}", state_path(state), class: "dropdown-item" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container, d-flex, m-5, p-5">
