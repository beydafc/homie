<div class="d-flex justify-content-end mt-5">
  <h4 class="promo-title d-flex justify-content-end" style="border-radius: 4px 0px 0px 4px; padding-right: 90px; width: 600px">MY PROMOS</h3>
</div>
<div class="container mt-5 p-3 mb-5">
  <table class="table text-align-center">
  <thead>
    <tr>
    </tr>
  </thead>
  <tbody>
    <% @likes.each do |like| %>
      <tr>
        <th scope="row"><%= image_tag like.promo.store.photo, size: "50x50", style: "border-radius: 50%" %></th>
        <td><%= like.promo.name %></td>
        <td><%= like.promo.store.name%></td>
        <td>
          <%= link_to like_path(like), class: "text-decoration-none text-danger", data: {turbo_method: :delete} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
