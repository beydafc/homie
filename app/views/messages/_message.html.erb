<div id="message-<%= message.id %>">
  <small>
    <%= cl_image_tag message.user.photo.key, class: "avatar-chatroom-small", alt: "avatar" %>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%l:%M %p") %></i>
  </small>
  <% if uri?(message.content) %>
  <%= link_to "Check this promo!", message.content %>
  <%= message.link %>
  <% else %>
  <p><%= message.content %></p>
  <% end %>
</div>
